{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declarationDir": "types",
    "resolveJsonModule": true,
    "allowJs": true,
    "rootDirs": ["src", "src/@types"],
    "moduleResolution": "Node",
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true
  },
  "exclude": ["test", "node_modules", ".eslintrc.js", ".prettierrc.js", "jest.config.js"],
  "ts-node": {
    "files": true
  }
}
